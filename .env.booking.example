# Booking Configuration Example
# Copy these settings to your .env file to customize your booking system

# ================================
# PRICING CONFIGURATION
# ================================
# Set the price per participant (in IDR)
BOOKING_PRICE_PER_PARTICIPANT=20000

# ================================
# PAYMENT METHODS CONFIGURATION
# ================================
# Enable/disable payment methods (true/false)
PAYMENT_BANK_TRANSFER_ENABLED=true
PAYMENT_E_WALLET_ENABLED=true
PAYMENT_CASH_ENABLED=true

# ================================
# BANK TRANSFER DETAILS
# ================================
BANK_NAME="Bank Mandiri"
BANK_ACCOUNT_NUMBER="1234-567890-123"
BANK_ACCOUNT_NAME="PT Tambora Adventure"

# ================================
# E-WALLET ACCOUNTS
# ================================
EWALLET_GOPAY="0812-3456-7890"
EWALLET_OVO="0812-3456-7890"
EWALLET_DANA="0812-3456-7890"
EWALLET_SHOPEEPAY="0812-3456-7890"

# ================================
# OFFICE/CONTACT INFORMATION
# ================================
OFFICE_ADDRESS="Jl. Raya Tambora No. 123, Dompu, West Nusa Tenggara"
OFFICE_HOURS="Monday - Sunday, 08:00 - 17:00"
CONTACT_PHONE="+62 812-3456-7890"

# ================================
# BOOKING SETTINGS
# ================================
BOOKING_PAYMENT_DUE_HOURS=24
BOOKING_MAX_PARTICIPANTS=10
BOOKING_CODE_PREFIX="BOOK-"
BOOKING_CODE_LENGTH=5

# ================================
# CONTACT INFORMATION
# ================================
BOOKING_CONTACT_PHONE="+62 812-3456-7890"
BOOKING_CONTACT_EMAIL="bookings@tamboratracker.com"
BOOKING_CONTACT_WHATSAPP="+62 812-3456-7890"
BOOKING_CONTACT_ADDRESS="Jl. Raya Tambora No. 123, Dompu, West Nusa Tenggara"

# ================================
# FILE UPLOAD SETTINGS
# ================================
BOOKING_MAX_FILE_SIZE=5120  # 5MB in KB